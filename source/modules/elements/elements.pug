mixin img-responsive-center(src,alt)
  img.img-responsive.center-block(src=src,alt=alt)

mixin img-rounded(src,alt)
  img.img-rounded(src=src,alt=alt)

mixin img-circle(src,alt)
  img.img-circle(src=src,alt=alt)

mixin img-thumbnail(src,alt)
  img.img-thumbnail(src=src,alt=alt)



//-
//-Multi-block in mixin declaration
//-
- blocks = {}

mixin set-block(key)
  - blocks[key] = this.block



//-
//- Tzt search
//-
mixin search()
  .input-group.search
    .input-group-prepend
      +ionicon('ion-ios-search-strong').search__icon
    input(type='text' class='form-control' aria-label='')&attributes(attributes)

//-
//- Tzt search - SP
//-
mixin search-sp()
  .input-group.search.search--sp
    .input-group-prepend
      +ionicon('ion-ios-search-strong').search__icon
    input(type='text' class='form-control' aria-label='')&attributes(attributes)



//-
//- Elements :: BS4 tabs
//-
mixin tabs(data)
  nav.w-100
    .nav.nav-tabs&attributes(attributes)(role='tablist')
      each tab in data.tabs
        //- Nav tabs
        a.nav-item.nav-link(role='tab', data-toggle='tab' class= tab.active ? 'show active' : '', href= tab.href)= tab.title

  //- Tab panels
  .tab-content
    block



//-
//- Elements :: BS4 Pagination
//-
mixin pagination(...pages)
  nav&attributes(attributes)
    ul.pagination
      li.page-item
        a.page-link(href='#', aria-label='Previous')
          span(aria-hidden='true') &laquo;
          span.sr-only Previous
      each page, index in pages
        li.page-item
          a.page-link(href= page)= index + 1
      li.page-item
        a.page-link(href='#', aria-label='Next')
          span(aria-hidden='true') &raquo;
          span.sr-only Next



//-
//- Elements ::  Accordion
//-
mixin accordion(data)
  div(role='tablist')
    each ent in data
      h6.mb-0.title(role='tab')
        span
          +ionicon('ion-arrow-right-b').font-color-orange-dark
        span 
          a(data-toggle='collapse', href= ent.href, role='button').title.title--orange-dark.font-size-15= ent.title
      block
      div.collapse.show(role= 'tabpanel' id=ent.id)
        - blocks[ent.id]()
