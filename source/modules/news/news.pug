mixin news-tabs(data)
  .tab-content.news-tabs__content
    each tab in data.tabs
      //- Tab pane
      .tab-pane.fade(role='tabpanel', class= tab.active ? 'show active' : '', id= tab.id)
        img(src=`images/${tab.img}`).news-tabs__content__img
        .news-tabs__content__caption
          h5.title.title--white= tab.title
          p.font-color-white Lorem ipsum dolor sit amet, consectetur adipiscing elit.

  .nav.nav-pills.flex-column.news-tabs__tabs&attributes(attributes)(role='tablist')
    each tab in data.tabs
      //- Nav tabs
      a.nav-link.d-flex(role='tab', data-toggle='tab' class= tab.active ? 'active' : '', href= tab.href)
        img(src=`images/${tab.thumb}`)
        p= tab.title

