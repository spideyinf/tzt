mixin news-aside(data)
  .news-aside
    h5.title.title--orange= data.title
    ul
      each index in data.news
        li
          a(href='#').d-flex.my-3
            img(src='http://via.placeholder.com/86x86').news-aside__img.mr-2
            p Tiêu đề tin tức #{index} Lorem ipsum dolor sit. 

