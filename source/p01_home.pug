          .row
            .col-lg-4
              img(src='images/home_me_va_be_banner1.png').img-fluid.my-2
            .col-lg-4
              img(src='images/home_me_va_be_banner2.png').img-fluid.my-2
            .col-lg-4
              img(src='images/home_me_va_be_banner3.png').img-fluid.my-2
          .row
            .col-lg-4
              img(src='images/home_me_va_be_banner4.png').img-fluid.my-2
