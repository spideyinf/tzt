doctype html
html
  +head(head.p01_home)

  body
    +header()
    +navbar('Trang chủ')
    main.p01-home
      .p01-home__top-banner
        .container
          img(src='images/home_top_banner.png')
      
      .container
        // Giá tốt cho bạn
        h3.title.title--primary Giá tốt cho bạn
        .hot-deals.owl-carousel.owl-theme
          .item
            +hot-deal()
          .item
            +hot-deal()
          .item
            +hot-deal()
          .item
            +hot-deal()
          .item
            +hot-deal()
          .item
            +hot-deal()

        // Product: Mẹ và bé
        h3.title.title--primary Mẹ và bé
        .row.mb-3
          figure.p01-home__product-contain.col-sm-9
            .p01-home__banner-slider

            // Mẹ và bé tabs
            +tabs(meVaBe).tabs

              block goiychoban
                .tab-pane-fade.in.active(role='tabpanel' id='goiychoban' aria-labelledby='1')
                  .d-flex.justify-content-between.flex-wrap
                    +product-card()
                    +product-card()
                    +product-card()
                    +product-card()
                    +product-card()
                    +product-card()
                    +product-card()
                    +product-card()
                    +product-card()
                    +product-card()
                  .d-flex.justify-content-end.mt-3.mx-4
                    +button('Xem thêm', 'anchor', 'ion-ios-arrow-forward')
              
              block sua
              .tab-pane-fade.in.active(role='tabpanel' id='sua' aria-labelledby='#sua')
                .d-flex.justify-content-between.flex-wrap
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                .d-flex.justify-content-end.mt-3.mx-4
                  +button('Xem thêm', 'anchor', 'ion-ios-arrow-forward')

              block xeday
              .tab-pane-fade.in.active(role='tabpanel' id='xeday' aria-labelledby='#xeday')
                .d-flex.justify-content-between.flex-wrap
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                .d-flex.justify-content-end.mt-3.mx-4
                  +button('Xem thêm', 'anchor', 'ion-ios-arrow-forward')

              block thoitrangchobe
              .tab-pane-fade.in.active(role='tabpanel' id='thoitrangchobe')
                .d-flex.justify-content-between.flex-wrap
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                  +product-card()
                .d-flex.justify-content-end.mt-3.mx-4
                  +button('Xem thêm', 'anchor', 'ion-ios-arrow-forward')

          aside.col-sm-3.pl-0
